
@{
    ViewBag.Title = "editCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model chat.CORE.Entities.Customer

@if (@TempData["message"] == null)
{
    <span></span>
}
else
{

    <h5>@Html.Raw(TempData["message"].ToString())</h5>
}



<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Müşteri Düzenleme Ekranı</h5>

    </div>
    <div class="modal-body ">
        <form class="form form-horizontal" enctype="multipart/form-data" action="/ACustomer/editCus" method="post">

            <div class="form-body">
                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="">Kullanıcı Adı</label>
                    <div class="col-sm-8">
                        <input class="form-control row" type="text" id="editTeacherName" name="UserName" value="@Model.UserName">

                        <input style="display:none;" class="hidden" type="text" name="ID" value="@Model.ID"> <input style="display:none;" class="hidden" type="text" name="StatusID" value="@Model.StatusID"> <input style="display:none;" class="hidden" type="text" name="IsActive" value="@Model.IsActive.ToString()">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="">Şifre</label>
                    <div class="col-sm-8">
                        <input class="form-control row" type="text" name="Password" value="@Model.Password">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="">Kullanıcı Email</label>
                    <div class="col-sm-8">
                        <input class="form-control row" type="text" name="Email" value="@Model.Email">
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="">Kullanıcı Kredisi</label>
                    <div class="col-sm-8">
                        <input class="form-control row" type="number" name="BtPrice" value="@Model.BtPrice">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success btn-block">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>